<script>
  import { XCircle, XButton, Group, CellBox, Badge, PopupRadio } from 'vux'
  import { Loadmore, Indicator } from 'mint-ui'

  export default {
    name: 'home-view',
    components: {XCircle, XButton, Group, CellBox, Badge, PopupRadio, 'mt-loadmore': Loadmore, Indicator},
    data () {
      return {
        allLoaded: false,
        todayIncome: '',
        totalIncome: '',
        integrity: 0,
        positionValues: [],
        totalPages: '',
        form: {
          page: '',
          size: '5',
          positionId: ''
        },
        workState: '',
        status: [
          {
            key: '01',
            value: '离职，随时到岗'
          },
          {
            key: '02',
            value: '在职，考虑机会'
          },
          {
            key: '03',
            value: '在职，不考虑机会'
          },
          {
            key: '04',
            value: '我是应届生'
          },
          {
            key: '05',
            value: '在读，寻找实习'
          },
          {
            key: '06',
            value: '在读，在实习中'
          },
          {
            key: '07',
            value: '创业找合伙人'
          }
        ]
      }
    },
    created: function () {
      Indicator.open();
      this.init();
    },
    watch: {
      workState (val, old) {
        if (old) {
          this.save(val)
        }
      }
    },
    methods: {
      init: function () {
        this.$store.dispatch('accountIncome', this.form).then(res => {
          if (res.data.code === '200') {
            this.todayIncome = res.data.data.todayIncome
            this.totalIncome = res.data.data.totalIncome
            this.$store.dispatch('resumeIntegrity', this.form).then(res => {
              if (res.data.code === '200') {
                this.integrity = parseInt(res.data.data)
                this.$store.dispatch('getResume', this.form).then(res => {
                  if (res.data.code === '200') {
                    this.workState = res.data.data.basicInfoValue.workState
                    this.$store.dispatch('recommendPosition', this.form).then(res => {
                      if (res.data.code === '200') {
                        this.positionValues = this.positionValues.concat(res.data.data.positionValues)
                        this.totalPages = res.data.data.totalPages
                        if (this.form.page === this.totalPages || this.totalPages === 0) {
                          this.allLoaded = true// 若数据已全部获取完毕
                        } else {
                          this.allLoaded = false
                        }
                        setTimeout(() => {
                          this.$refs.loadmore.onTopLoaded()
                          this.$refs.loadmore.onBottomLoaded()
                        }, 1500)
                      }
                      Indicator.close();
                    })
                  }
                })
              }
            })
          }
        })
      },
      gotoDetail: function (index) {
        this.form.positionId = this.positionValues[index].positionId
        this.$router.push({
          path: '/recruit/job',
          query: {positionId: this.positionValues[index].positionId}
        })
      },
      goToFund: function () {
        this.$router.push({path: '/user/fund'})
      },
      goToResume: function () {
        this.$router.push({path: '/resume'})
      },
      save (val) {
        this.$store.dispatch('editWorkState', val).then(res => {
          if (res.data.code === '200') {
            this.$vux.toast.text('状态改变成功')
          } else {
            this.$vux.toast.text(res.data.message)
          }
        })
      },
      loadTop () {
        this.form.page = 0
        this.positionValues = []
        this.init()
      },
      loadBottom () {
        console.log(this.allLoaded)
        this.form.page++
        this.init()
      }
    }
  }
</script>

