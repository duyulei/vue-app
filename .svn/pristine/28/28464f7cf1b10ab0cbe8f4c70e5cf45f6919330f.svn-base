<template>
  <div class="modify-password-view">
    <x-header class="header" :left-options="{backText: ''}">修改登录密码</x-header>
    <div>
      <group class="input-group">
        <x-input type="password" v-model.trim="form.oldPassword" :min="6" placeholder="输入原登录密码"></x-input>
        <x-input type="password" v-model.trim="form.newPassword" :min="6" placeholder="设置新登录密码"></x-input>
        <x-input type="password" v-model.trim="form.rePassword" :min="6" placeholder="确认新登录密码"></x-input>
      </group>
    </div>
    <x-button class="primary-red" type="primary" style="margin-top: 20px;" @click.native="reset">确定</x-button>
  </div>
</template>

<script>
  import { Flexbox, XInput, Group, XButton, XHeader } from 'vux'

  export default {
    name: 'modify-password-view',
    components: {
      Flexbox,
      XInput,
      Group,
      XButton,
      XHeader
    },
    data () {
      return {
        form: {
          oldPassword: '',
          newPassword: '',
          rePassword: ''
        }
      }
    },
    methods: {
      reset: function () {
        this.$store.dispatch('modifyPassword', this.form).then(res => {
          console.log(res)
          if (res.data.code === '200') {
            this.$router.replace({path: '/login'})
          } else {
          }
          this.$vux.toast.text(res.data.message)
        })
      }
    }
  }
</script>

